{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "stripInternal": false,
    "noEmitOnError": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo-dev"
  },
  "include": ["src/**/*", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}
