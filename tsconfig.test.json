{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist-test",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "isolatedModules": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["src/**/*", "src/**/*.test.ts", "src/**/*.spec.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}
